{
  "name": "gamearr",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "start": "bun run dev",
    "dev": "bun --watch src/server/index.ts",
    "dev:web": "cd src/web && bun run dev",
    "dev:all": "concurrently \"bun run dev\" \"bun run dev:web\" --names \"backend,frontend\" --prefix-colors \"blue,magenta\"",
    "build": "bun run build:web && bun build src/server/index.ts --compile --outfile gamearr",
    "build:web": "cd src/web && bun run build",
    "db:init": "bun src/server/db/init.ts",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "@hono/zod-validator": "^0.2.0",
    "drizzle-orm": "^0.29.0",
    "zod": "^3.22.0",
    "cron": "^3.1.0",
    "parse-torrent": "^11.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.0",
    "typescript": "^5.3.0"
  }
}
