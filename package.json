{
  "name": "gamearr",
  "version": "0.1.7",
  "type": "module",
  "scripts": {
    "start": "bun run dev",
    "dev": "bun --watch src/server/index.ts",
    "dev:web": "cd src/web && bun run dev",
    "dev:all": "concurrently \"bun run dev\" \"bun run dev:web\" --names \"backend,frontend\" --prefix-colors \"blue,magenta\"",
    "build": "bun run build:web && bun run build:vfs && bun build src/server/index.ts --compile --outfile gamearr --define process.env.NODE_ENV='\"production\"'",
    "build:web": "cd src/web && bun run build",
    "build:vfs": "bun scripts/generate-vfs.ts",
    "db:init": "bun src/server/db/init.ts",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "bun src/server/db/migrate.ts",
    "db:migrate:download-category": "bun src/server/db/migrations/add-download-category.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "screenshots": "playwright test e2e/screenshots.spec.ts --headed"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.0",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.5.0",
    "cron": "^3.1.0",
    "drizzle-orm": "^0.29.0",
    "hono": "^4.0.0",
    "parse-torrent": "^11.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.20.0",
    "typescript": "^5.3.0"
  }
}
